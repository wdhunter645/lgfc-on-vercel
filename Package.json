{
“name”: “lgfc-on-vercel”,
“version”: “1.0.0”,
“private”: true,
“scripts”: {
“dev”: “next dev”,
“build”: “next build”,
“start”: “next start”,
“lint”: “next lint”,
“lint:fix”: “next lint –fix”,
“type-check”: “tsc –noEmit”,
“format”: “prettier –write "**/*.{ts,tsx,js,jsx,json,md}"”,
“format:check”: “prettier –check "**/*.{ts,tsx,js,jsx,json,md}"”,
“test”: “jest”,
“test:watch”: “jest –watch”,
“test:coverage”: “jest –coverage”,
“test:ci”: “jest –ci –coverage –maxWorkers=2”,
“test:db”: “node scripts/test-supabase-connection.js”,
“lighthouse”: “lhci autorun”,
“lighthouse:local”: “lhci autorun –config=lighthouserc.js”,
“security:audit”: “npm audit –audit-level=moderate”,
“security:fix”: “npm audit fix”,
“security:check”: “npm run security:audit && npm run security:licenses”,
“security:licenses”: “license-checker –production –summary”,
“vercel:pull”: “vercel env pull .env.local”,
“vercel:deploy”: “vercel deploy”,
“vercel:deploy:prod”: “vercel deploy –prod”,
“workflow:setup”: “./scripts/setup-workflows.sh”,
“workflow:test”: “./scripts/test-workflow.sh”,
“secrets:create”: “./scripts/create_secrets.sh”,
“db:migrate”: “node scripts/run-migrations.js”,
“db:seed”: “node scripts/seed-database.js”,
“db:reset”: “node scripts/reset-database.js”,
“analyze”: “ANALYZE=true next build”,
“clean”: “rm -rf .next out node_modules/.cache”,
“prepare”: “husky install”,
“pre-commit”: “lint-staged”,
“validate”: “npm run type-check && npm run lint && npm run test:ci”,
“postinstall”: “npm run prepare || true”
},
“dependencies”: {
“@supabase/supabase-js”: “^2.38.0”,
“@aws-sdk/client-s3”: “^3.450.0”,
“next”: “14.0.3”,
“react”: “^18.2.0”,
“react-dom”: “^18.2.0”
},
“devDependencies”: {
“@lhci/cli”: “^0.12.0”,
“@next/bundle-analyzer”: “^14.0.3”,
“@types/node”: “^20.9.0”,
“@types/react”: “^18.2.37”,
“@types/react-dom”: “^18.2.15”,
“@typescript-eslint/eslint-plugin”: “^6.10.0”,
“@typescript-eslint/parser”: “^6.10.0”,
“eslint”: “^8.53.0”,
“eslint-config-next”: “14.0.3”,
“eslint-config-prettier”: “^9.0.0”,
“eslint-plugin-react”: “^7.33.2”,
“eslint-plugin-react-hooks”: “^4.6.0”,
“husky”: “^8.0.3”,
“jest”: “^29.7.0”,
“jest-environment-jsdom”: “^29.7.0”,
“@testing-library/react”: “^14.1.2”,
“@testing-library/jest-dom”: “^6.1.4”,
“lint-staged”: “^15.1.0”,
“license-checker”: “^25.0.1”,
“prettier”: “^3.1.0”,
“typescript”: “^5.2.2”
},
“lint-staged”: {
“*.{ts,tsx,js,jsx}”: [
“eslint –fix”,
“prettier –write”
],
“*.{json,md}”: [
“prettier –write”
]
},
“jest”: {
“testEnvironment”: “jsdom”,
“setupFilesAfterEnv”: [”<rootDir>/jest.setup.js”],
“testPathIgnorePatterns”: [”/node_modules/”, “/.next/”],
“moduleNameMapper”: {
“^@/(.*)$”: “<rootDir>/$1”
},
“collectCoverageFrom”: [
“app/**/*.{js,jsx,ts,tsx}”,
“!app/**/*.d.ts”,
“!app/**/*.stories.{js,jsx,ts,tsx}”,
“!app/**/index.{js,jsx,ts,tsx}”
]
},
“engines”: {
“node”: “>=18.0.0”,
“npm”: “>=9.0.0”
}
}